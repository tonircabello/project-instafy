{{>navbar}}
<div class="flex justify-center ">
    <div class="mt-4 flex items-center w-full max-w-2xl bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
        <div class="flex justify-between items-center py-4 px-6">    
            <img class="p-8 rounded-t-lg" src="{{about.images.1.url}}" alt="about image" />
        </div>
        <div class="px-5 pb-5">
            <h5 class="text-xl font-semibold text-gray-900 dark:text-white">Publication Details:</h5>
            <h5 class="text-xl tracking-tight text-gray-900 dark:text-white">The Publication is about: {{about.name}}</h5>
            <h6 class="text-lg tracking-tight text-gray-900 dark:text-white">Content: {{publication.content}}
            <h6 class="text-lg tracking-tight text-gray-900 dark:text-white">Tags: {{publication.tags}}
        </div>
    </div>
</div>
