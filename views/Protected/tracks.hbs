
  {{>navbar}}
<section class="min-h-screen bg-center bg-no-repeat bg-cover bg-[url('/images/trackbackground.jpg')] bg-gray-700 bg-blend-multiply">
    <div class="flex flex-col justify-between p-4 leading-normal">
      <div class="px-4 mx-auto max-w-screen-xl text-center py-24 lg:py-5">
        <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-white md:text-5xl lg:text-6xl">Tracks</h1>
        <div class="flex flex-col space-y-4 sm:flex-row sm:justify-center sm:space-y-0">
            <ul>
            {{#each tracks}}
              <li>
                <h3 class="text-xl">{{this.name}}</h3>
                {{#if this.preview_url}}
                  <audio controls>
                    <source src="{{this.preview_url}}" type="audio/mpeg">
                    Your browser does not support the audio element.
                  </audio>
                {{else}}
                  <p>No preview available</p>
                {{/if}}
              </li>
            {{/each}}
          </ul>
        </div>
    </div> 
  </div> 
</section>
</body>

